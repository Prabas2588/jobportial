    <script>document.addEventListener("DOMContentLoaded", function () {
    let expRadio = document.getElementById("exp");
    let freshRadio = document.getElementById("fresh");
    let experiencedFields = document.getElementById("experiencedFields");
    let fresherFields = document.getElementById("fresherFields");

    expRadio.addEventListener("change", function () {
        if (expRadio.checked) {
            experiencedFields.style.display = "block";
            fresherFields.style.display = "none";
        }
    });

    freshRadio.addEventListener("change", function () {
        if (freshRadio.checked) {
            experiencedFields.style.display = "none";
            fresherFields.style.display = "block";
        }
    });

    document.getElementById("jobApplicationForm").addEventListener("submit", function (event) {
        event.preventDefault(); // Prevent form submission for testing
        alert("Form submitted successfully!");
    });
});
</script>
